#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main() {
    srand(time(NULL)); 
        int valor = rand() % 13 + 1;  
        int palo = rand() % 4;        
        
        if (valor== 1)
        printf("A");
        else if (valor==11)
        printf("J");
        else if (valor==12)
        printf("Q");
        else if (valor==13)
        printf("K");
        else 
        printf("%d",valor);
        
        if (palo==0)
        printf("C");
        else if (palo==1)
        printf("T");
        else if (palo==2)
        printf("P");
        else
        printf("D");
    
    return 0;
}
